<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.notification.AllNotificationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_like"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_thumb_up_24"
            android:backgroundTint="@color/white"
            android:text="Like"
            android:textSize="13dp"
            android:textColor="#1363DF"
            app:layout_constraintStart_toEndOf="@id/btn_all"
            app:layout_constraintTop_toTopOf="@id/btn_all"
            app:layout_constraintEnd_toStartOf="@id/btn_favorite"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_favorite"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_bookmark_24"
            android:backgroundTint="@color/white"
            android:text="Favorite"
            android:textSize="13dp"
            android:textColor="#1363DF"
            app:layout_constraintStart_toEndOf="@id/btn_like"
            app:layout_constraintTop_toTopOf="@id/btn_all"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_all"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
            android:backgroundTint="@color/white"
            android:text="All"
            android:textSize="13dp"
            android:textColor="#1363DF"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_like"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_like"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:listitem="@layout/list_like_notification"
            app:layout_constraintTop_toBottomOf="@+id/btn_all"
            app:layout_constraintBottom_toTopOf="@+id/rv_favorite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:listitem="@layout/list_favorite_notification"
            app:layout_constraintTop_toBottomOf="@+id/rv_like"
            app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:labelVisibilityMode="auto"
            android:paddingTop="7dp"
            android:paddingBottom="2dp"
            app:itemIconSize="40dp"
            app:itemIconTint="@color/bottom_nav_item_color"
            android:background="@drawable/bottom_nav_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/bottom_nav_menu"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>