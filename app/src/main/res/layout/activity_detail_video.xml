<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.video.detail.DetailVideoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimaryVariant"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_back_toolbar"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:src="@drawable/left_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_label_toolbar"
                style="@style/body.bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Video"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_back_toolbar"/>

            <ImageView
                android:id="@+id/btn_settings_toolbar"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:src="@drawable/gear"
                app:tint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <fragment
        android:id="@+id/youtube_player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:name="com.google.android.youtube.player.YouTubePlayerFragment"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_video_title"
        style="@style/body.medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/title_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/youtube_player"/>

    <TextView
        android:id="@+id/tv_video_source"
        style="@style/body.medium"
        android:textColor="@color/light_gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_video_title"
        app:layout_constraintStart_toStartOf="@id/tv_video_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Parentalk ID"/>

    <Button
        android:id="@+id/btn_save_video"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_favorite_filled"
        android:background="@drawable/bg_button_stroke_black"
        app:backgroundTint="@null"
        android:text="@string/save"
        android:textColor="@color/black"
        android:fontFamily="@font/cabin_medium"
        app:layout_constraintTop_toBottomOf="@id/tv_video_source"
        app:layout_constraintEnd_toEndOf="@id/tv_video_title"/>

    <TextView
        android:id="@+id/tv_script_label"
        style="@style/body.medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/skrip_vidio"
        app:layout_constraintTop_toBottomOf="@id/btn_save_video"
        app:layout_constraintStart_toStartOf="@id/tv_video_title"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_script_label"
        app:layout_constraintStart_toStartOf="@id/tv_video_title"
        app:layout_constraintEnd_toEndOf="@id/youtube_player"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_video_script"
            style="@style/body.description.gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem/random"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>