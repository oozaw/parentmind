<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    tools:context=".view.article.ArtikelActivity">

    <Button
        android:id="@+id/btn_show_artikel_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_solid"
        app:backgroundTint="@null"
        android:fontFamily="@font/cabin_bold"
        android:text="Menampilkan artikel pencarian anda"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/ln_btn_artikel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_show_artikel_search">

        <Button
            android:id="@+id/btn_Artikel_terbaru"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/bg_button_stroke"
            app:backgroundTint="@null"
            android:text="Artikel Terbaru"
            android:textColor="@color/blueButton"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/btn_Artikel_Populer"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_button_stroke"
            app:backgroundTint="@null"
            android:text="Artikel Populer"
            android:textColor="@color/blueButton"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <ImageView
        tools:src="@tools:sample/backgrounds/scenic"
        android:id="@+id/iv_artikel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/corner_radius20dp"
        android:clipToOutline="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitXY"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="134dp"
        app:layout_constraintTop_toBottomOf="@id/ln_btn_artikel"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_detail_artikel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cabin_medium"
        android:text="Artikel"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_artikel" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_ahli_parenting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        tools:listitem="@layout/item_list_artikel"
        app:layout_constraintStart_toStartOf="@id/tv_detail_artikel"
        app:layout_constraintEnd_toEndOf="@id/tv_detail_artikel"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_artikel"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>