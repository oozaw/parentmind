<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.article.detail.DetailArticleActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimaryVariant"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_back_toolbar"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:src="@drawable/left_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/white"
                android:contentDescription="@string/tombol_kembali" />

            <TextView
                android:id="@+id/tv_label_toolbar"
                style="@style/body.bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_artikel"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_back_toolbar"/>

            <ImageView
                android:id="@+id/btn_settings_toolbar"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:src="@drawable/gear"
                app:tint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/tombol_pengaturan" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.google.android.material.imageview.ShapeableImageView
                tools:src="@tools:sample/backgrounds/scenic"
                android:id="@+id/iv_thumbnail"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_height="200dp"
                app:shapeAppearanceOverlay="@style/ImageView.Corner"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tv_detail_judul_artikel"
                style="@style/body.medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                tools:text="Judul Artikel"
                android:textAlignment="textStart"
                app:layout_constraintStart_toStartOf="@id/iv_thumbnail"
                app:layout_constraintEnd_toEndOf="@id/iv_thumbnail"
                app:layout_constraintTop_toBottomOf="@id/iv_thumbnail"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_source"
                style="@style/body.medium"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/cabin_medium"
                tools:text="Sumber Artikel"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_judul_artikel"
                app:layout_constraintStart_toStartOf="@id/tv_detail_judul_artikel"/>

            <Button
                android:id="@+id/btn_save_article"
                android:layout_width="99dp"
                android:layout_height="34dp"
                android:background="@drawable/bg_button_stroke_black"
                android:drawableLeft="@drawable/ic_favorite"
                android:fontFamily="@font/cabin_medium"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:paddingTop="0dp"
                android:paddingBottom="1dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                app:backgroundTint="@null"
                app:layout_constraintTop_toBottomOf="@id/tv_source"
                app:layout_constraintEnd_toStartOf="@id/btn_open_article"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btn_open_article"
                android:layout_width="99dp"
                android:layout_height="34dp"
                android:background="@drawable/bg_button_stroke_black"
                android:drawableLeft="@drawable/ic_open"
                android:fontFamily="@font/cabin_medium"
                android:text="@string/buka"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:paddingTop="0dp"
                android:paddingBottom="1dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                app:backgroundTint="@null"
                app:layout_constraintTop_toTopOf="@id/btn_save_article"
                app:layout_constraintBottom_toBottomOf="@id/btn_save_article"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tv_skrip_artikel"
                style="@style/body"
                android:textColor="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                tools:text="@tools:sample/lorem/random"
                android:justificationMode="inter_word"
                app:layout_constraintTop_toBottomOf="@id/btn_save_article"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>