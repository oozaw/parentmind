<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    tools:context=".view.detailartikel.DetailArtikelActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                tools:src="@tools:sample/backgrounds/scenic"
                android:id="@+id/iv_thumbnail"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/corner_radius20dp"
                android:clipToOutline="true"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tv_detail_judul_artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Artikel"
                android:fontFamily="@font/cabin_medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="@id/iv_thumbnail"
                app:layout_constraintEnd_toEndOf="@id/iv_thumbnail"
                app:layout_constraintTop_toBottomOf="@id/iv_thumbnail"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="108dp"
                android:layout_height="21dp"
                android:fontFamily="@font/cabin_medium"
                android:text="Sumber Artikel"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="@id/iv_pencil"
                app:layout_constraintBottom_toBottomOf="@id/iv_pencil"
                app:layout_constraintStart_toEndOf="@id/iv_pencil"/>

            <ImageView
                android:id="@+id/iv_pencil"
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:src="@drawable/edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_judul_artikel"
                android:layout_marginTop="16dp"
                />

            <Button
                android:id="@+id/btn_save_artikel"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/ic_favorite"
                android:background="@drawable/bg_button_stroke_black"
                app:backgroundTint="@null"
                android:text="@string/save"
                android:textColor="@color/black"
                android:fontFamily="@font/cabin_medium"
                app:layout_constraintTop_toTopOf="@id/iv_pencil"
                app:layout_constraintBottom_toBottomOf="@id/iv_pencil"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_judul_artikel"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tv_skrip_artikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                tools:text="@tools:sample/lorem/random"
                app:layout_constraintTop_toBottomOf="@id/btn_save_artikel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                tools:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>